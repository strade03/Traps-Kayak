<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bibCellView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
     <ImageView
                    android:id="@+id/checkboxView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkbox" />
       

    <ImageView
        android:id="@+id/lockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lock" />

 
               
        <TextView
            android:id="@+id/bibnumberView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:text="  125  " 
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textStyle="bold" />
        
                <TextView
            android:id="@+id/summaryView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="  1:25.124 + 52"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />

            

        </LinearLayout>

                            <TextView
            android:id="@+id/penaltyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="0020000500002000000000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff" />
            
                                        <TextView
            android:id="@+id/chronoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="15:23:45.125 | 15:24:56.256 "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
            
                    
          
    
</LinearLayout>
