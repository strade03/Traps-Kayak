<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/judgment_letter_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="60dp"            android:background="@drawable/targetletter"
        android:gravity="center"
        android:text="X"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/penalty_button_2_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/penalty"
        android:text="50"
        android:textSize="35sp"
        android:textStyle="bold" />
    
    <Button
        android:id="@+id/penalty_button_1_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/penalty"
        android:text=" 2 "
        android:textSize="35sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/penalty_button_0_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/penalty"
        android:text=" 0 "
        android:textSize="35sp"
        android:textStyle="bold" />



</LinearLayout>